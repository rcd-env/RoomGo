<% layout('layouts/boilerplate') -%>
<body>
  <div class="row-1 mt-4">
    <div class="col-10 offset-1">
      <div class="card">
        <img
          src="<%=list.image.url%>"
          class="card-img-top show-img"
          alt="..."
        />
        <div class="card-body">
          <b class="show-title" style="font-size: 2rem"> <%=list.title%></b>
          <p class="card-text show-text" style="margin-bottom: 5px">
            <%=list.description%>
          </p>
          <b>â‚¹<%=list.price.toLocaleString("en-IN")%></b>
          <%=list.location%> &bull; <%=list.country%>
        </div>
        <br />
        <div class="row">
          <div class="col-12 col-md-4 mb-2">
            <form action="/lists/<%=list._id%>/edit">
              <button class="btn btn-dark w-100">Edit</button>
            </form>
          </div>
          <div class="col-12 col-md-8">
            <form action="/lists/<%=list._id%>/delete">
              <button
                class="btn btn-dark w-100"
                onclick="return confirm('Are you sure, You want to delete this list?')"
              >
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr />
  <div class="col-10 offset-1 mb-4">
    <h4>Leave a Review :</h4>
    <form
      action="/lists/<%= list._id %>/reviews"
      method="post"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating :</label>
        <select name="rating" id="rating" class="form-control">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Review : </label>
        <textarea
          class="form-control"
          name="comment"
          id="comment"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-dark w-100">Add Review</button>
    </form>
  </div>
  <hr />
  <div class="col-10 offset-1 mb-4">
    <h4>What Our Customers Felt</h4>
    <hr />
    <% if (list.reviews.length) { %> <% list.reviews.forEach(review => { %>

    <div class="card">
      <div class="card-body">
        <p class="card-text">Rating : <%=review.rating %> &#9733;</p>
        <p class="card-text" style="text-align: justify">
          Review : <%=review.comment %>
        </p>
        <form
          action="/lists/<%=list._id%>/reviews/<%= review._id%>"
          method="post"
        >
          <button
            class="btn btn-outline-dark"
            onclick="return confirm('Are you sure, You want to delete this review?')"
          >
            Delete
          </button>
        </form>
      </div>
    </div>
    <hr />
    <% }); } else {%>
    <p>No Reviews Yet.</p>
    <% } %>
  </div>
</body>
