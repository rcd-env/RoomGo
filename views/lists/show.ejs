<% layout('layouts/boilerplate') -%>
<body>
  <div class="row-1 mt-5">
    <div class="col-md-6 col-10 offset-1 offset-md-3">
      <div class="card">
        <img
          src="<%=list.image.url%>"
          class="card-img-top show-img"
          alt="..."
        />
        <div class="card-body">
          <b style="font-size: 2rem"> <%=list.title%></b>
          <p class="card-text" style="margin-bottom: 5px">
            <%=list.description%>
          </p>
          <b>â‚¹<%=list.price.toLocaleString("en-IN")%></b>
          <%=list.location%> &bull; <%=list.country%>
        </div>
        <br />
        <div class="row">
          <div class="col-12 col-md-4 mb-2">
            <form action="/lists/<%=list._id%>/edit">
              <button class="btn btn-dark w-100">Edit</button>
            </form>
          </div>
          <div class="col-12 col-md-8">
            <form action="/lists/<%=list._id%>/delete">
              <button
                class="btn btn-dark w-100"
                onclick="return confirm('Are you sure, You want to delete this list?')"
              >
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
